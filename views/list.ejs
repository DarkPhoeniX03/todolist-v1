<%- include('header') -%>

<div class="box" id="heading">
    <h1><%= title %></h1>
</div>
<div class="box">
    <% for(var i = 0 ; i < listItems.length ; i++){ %>
    <div class="item">
        <input type="checkbox">
        <p><%= listItems[i] %></p>
    </div>
    <% } %>
    <form action="/" method="post" class="item">
        <input type="text" name="itemName" placeholder="New Item" autofocus autocomplete="off">
        <button type="submit" name="submitButton" value=<%= title %>>+</button>
    </form>
</div>

<%- include('footer') -%>